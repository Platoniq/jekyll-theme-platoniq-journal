{% assign articles_all = site.articles
    | where: "volume-uid", page.uid
    | where: "locale", page.locale
    | sort: "article-order", "last" %}

{% assign articles_blueprints = articles_all | where: "category", "blueprints" %}
{% assign articles_deep_dives = articles_all | where: "category", "deep-dives" %}
{% assign articles_interviews = articles_all | where: "category", "interviews" %}
{% assign articles_reports = articles_all | where: "category", "reports" %}
{% assign articles_stories = articles_all | where: "category", "stories" %}

