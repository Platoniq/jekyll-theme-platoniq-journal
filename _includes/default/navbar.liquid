{% assign navbar_pages = site.pages | where: "locale", page.locale %}

<div class="branding">
  {% if site.avatar %}
    <a href="{{ '/' | relative_url }}">
      <img alt="logo img" class="avatar" src="{{ site.avatar | relative_url }}" />
    </a>
  {% endif %}

  <a class="site-title" aria-label="{{ site.title }}" href="{{ '/' | relative_url }}">
    {{ site.title }}
  </a>

  <ul>
      {% assign name_page = "" %}

      {% for page in navbar_pages %}
        {% if page.navbar %}
        <li>
          <a class="clear" aria-label="{{ page.title }}" title="{{ page.title }}" href="{{ page.url | relative_url }}">
            {{ page.title }}
          </a>
        </li>
        {% endif %}
      {% endfor %}
  </ul>

  {% include default/locale_selector.liquid %}
</div>

<hr>
