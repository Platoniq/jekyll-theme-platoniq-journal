<li> uid {{ page.uid }}</li>
<li> locale {{ page.locale }}</li>
<li> colection {{ page.collection }}</li>

{% assign translations = site.pages | where: "uid", page.uid %}
{% if page.collection %}
  {% capture the_collection %}{{page.collection}}{% endcapture %}
  {% assign translations = site[the_collection] | where: "uid", page.uid %}
{% endif %}

<nav class="navbar navbar-fixed-bottom">
  <ul class="nav navbar-nav navbar-locale">
  {% for translation in translations %}
    <li class="nav-item {% if page.locale == translation.locale %} active {% endif %}">
      <a class="nav-link" href="{{ translation.url | relative_url }}">{{ translation.locale }}</a>
    </li>
  {% endfor %}
  </ul>
</nav>
