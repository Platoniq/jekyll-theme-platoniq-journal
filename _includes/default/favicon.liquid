{% assign tile_color = "#fd4022" %}
{% assign theme_color = "#ffffff" %}
{% assign version = "0.1" %}

{% assign base_path = "/assets/favicon/" %}

<link rel="apple-touch-icon" sizes="180x180" href="{{ base_path }}/apple-touch-icon.png?v={{ version }}">
<link rel="icon" type="image/png" sizes="32x32" href="{{ base_path }}/favicon-32x32.png?v={{ version }}">
<link rel="icon" type="image/png" sizes="16x16" href="{{ base_path }}/favicon-16x16.png?v={{ version }}">
<link rel="manifest" href="{{ base_path }}/site.webmanifest?v={{ version }}">
<link rel="mask-icon" href="{{ base_path }}/safari-pinned-tab.svg?v={{ version }}" color="{{ tile_color }}">
<link rel="shortcut icon" href="{{ base_path }}/favicon.ico?v={{ version }}">
<meta name="msapplication-TileColor" content="{{ tile_color }}">
<meta name="msapplication-TileImage" content="{{ base_path }}/mstile-144x144.png?v={{ version }}">
<meta name="msapplication-config" content="{{ base_path }}/browserconfig.xml?v={{ version }}">
<meta name="theme-color" content="{{ theme_color }}">