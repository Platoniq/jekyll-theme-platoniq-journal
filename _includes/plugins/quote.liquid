<figure class="pj-quote">
  <blockquote>
    {% include svg/icon-quote.liquid %}

    {{ quote.content }}
  </blockquote>

  {% if quote.author and quote.author != "" and quote.author != "undefined" %}
    <figcaption class="pj-quote-author">
      {{ quote.author }}
    </figcaption>
  {% endif %}
</figure>
