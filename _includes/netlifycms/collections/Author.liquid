{% raw %}
- name: authors
  label: Autorxs
  label_singular: Autorx
  folder: "_authors/"
  slug: "{{uid}}"
  i18n:
    structure: multiple_folders
    locales: *locales
  create: true
  editor:
    preview: true
  fields:
    - label: Slug
      name: uid
      hint: "Identificador único, compartido entre los distintos idiomas, que se usa para componer la URL"
      widget: string
      i18n: duplicate

    - label: Layout
      name: layout
      widget: hidden
      default: author
      i18n: duplicate

    - label: Nombre
      name: name
      widget: string
      i18n: duplicate

    - label: Rol en la organización
      name: position
      widget: string
      i18n: translate

    - label: Cuerpo de la página
      name: body
      widget: markdown
      i18n: translate
{% endraw %}
