{% raw %}
- name: authors
  label: Authors
  label_singular: Author
  folder: "_authors/"
  slug: "{{uid}}"
  i18n:
    structure: multiple_folders
    locales: *locales
  create: true
  editor:
    preview: true
  fields:
    - label: Slug
      name: uid
      hint: "Identificador unico, compartido entre los idiomas, parte final de la url al recurso"
      widget: string
      i18n: duplicate

    - label: Layout
      name: layout
      widget: hidden
      default: author
      i18n: duplicate

    - label: Diplay Name
      name: name
      widget: string
      i18n: duplicate

    - label: Position
      name: position
      widget: string
      i18n: translate

    - label: Body
      name: body
      widget: markdown
      i18n: translate
{% endraw %}
