{% raw %}
- name: authors
  label: Autorías
  label_singular: Autoría
  folder: "_authors/"
  slug: "{{uid}}"
  i18n:
    structure: multiple_folders
    locales: *locales
  create: true
  editor:
    preview: true
  fields:
    - label: Slug
      name: uid
      hint: "Identificador único, compartido entre los distintos idiomas, que se usa para componer la URL"
      widget: string
      i18n: duplicate

    - label: Layout
      name: layout
      widget: hidden
      default: author
      i18n: duplicate

    - label: Nombre
      name: name
      widget: string
      i18n: duplicate

    - label: Rol en la organización
      name: position
      widget: string
      i18n: translate

    - label: Cuerpo de la página
      name: body
      widget: markdown
      i18n: translate

    - label: Imagen
      name: image
      widget: object
      i18n: true
      fields:
        - label: Imagen
          name: path
          widget: image
          choose_url: false
          default: "/assets/media/no_image-hero.png"
          media_library: { config: { multiple: false } }
          media_folder: "/media/authors"
          i18n: duplicate
        - label: Texto alternativo a la imagen
          name: alt
          widget: string
          i18n: translate
{% endraw %}
