{% raw %}
- name: "sticker_pack"
  label: "Sticker Packs"
  label_singular: "Sticker Pack"
  folder: "_sticker_packs/"
  create: false
  delete: false
  i18n:
    structure: multiple_folders
    locales: *locales
  # editor:
  #   preview: true
  # identifier_field: uid
  fields:
    - { label: "Layout", name: "layout", widget: "hidden", default: "sticker_pack", i18n: duplicate }
    - label: Volumen del Journal
      name: volume-uid
      widget: hidden
      i18n: duplicate
    - label: Título
      name: title
      widget: string
      i18n: translate
    - label: Descripción o resumen de la página
      hint: Principalmente usada para SEO
      name: description
      widget: string
      i18n: translate
    - label: Autorx
      name: author
      widget: string
      i18n: duplicate
    - label: Licencia
      name: license
      widget: text
      i18n: translate
    - label: Contenido de la página de stickers
      name: body
      widget: markdown
      editor_components: ["image", "gallery", "quote-tag", "file-tag", "documents-tag", "links-tag", "numbers-tag", "collapsible-note", "videos"]
      i18n: translate
    - label: Portada
      name: "cover"
      widget: "object"
      i18n: true
      fields:
        - {
            label: "Portada",
            hint: Imagen de portada,
            name: "path",
            widget: "image",
            choose_url: false,
            default: "/assets/media/no_image-hero.png",
            media_library: { config: { multiple: false } },
            media_folder: "/media/sticker_packs/heroes/",
            i18n: duplicate
          }
        - {
            label: "Portada (reducida)",
            hint: Imagen pequeña usada en listas,
            name: "thumbnail",
            widget: "image",
            choose_url: false,
            default: "/assets/media/no_image-thumbnail.png",
            media_library: { config: { multiple: false } },
            media_folder: "/media/sticker_packs/thumbnails/",
            i18n: duplicate
          }
        - { label: "Texto alternativo a la imagen", name: "alt", widget: "string", i18n: translate }
        - { label: "Créditos de la imagen", name: "credits", widget: "string", i18n: translate }
        - { label: "Pie de imagen", name: "caption", widget: "string", i18n: translate }
    - label: "Archivo ZIP"
      name: "file"
      widget: "object"
      collapsed: true
      hint: Configurado por el equipo técnico
      i18n: true
      fields:
        - { label: "Path", name: "path", widget: "hidden", i18n: duplicate }
        - { label: "Info", name: "info", widget: "hidden", i18n: duplicate }
{% endraw %}
