{% raw %}
- name: "sticker_pack"
  label: "Packs de Stickers"
  label_singular: "Pack de Stickers"
  folder: "_sticker_packs/"
  create: false
  delete: false
  i18n:
    structure: multiple_folders
    locales: *locales
  # editor:
  #   preview: true
  # identifier_field: uid
  fields:
    - { label: "Layout", name: "layout", widget: "hidden", default: "sticker_pack", i18n: duplicate }
    - label: Volumen del Journal
      name: volume-uid
      widget: hidden
      i18n: duplicate
    - {
      label: "Autoría de la página",
      name: "author",
      widget: "string",
      i18n: translate
    }
    - label: Autoría del pack de stickers
      name: stickers_author
      widget: string
      i18n: translate
    - label: "Autoras"
      name: author_uids
      widget: "list"
      required: true
      i18n: true
      summary: "{{fields.author_uid}}"
      field:
        label: "Autora"
        name: author_uid
        widget: relation
        collection: authors
        display_fields: [name]
        search_fields: [name, uid]
        value_field: uid
        i18n: duplicate
    - label: Título de la página
      name: title
      widget: string
      i18n: translate
    - label: Título de la página para el menú
      name: title_menu
      widget: string
      i18n: translate
    - label: Descripción o resumen de la página
      hint: Principalmente usada para SEO
      name: description
      widget: string
      i18n: translate
    - label: Contenido de la página de stickers
      name: body
      widget: markdown
      editor_components: ["gallery", "quote-tag", "file-tag", "documents-tag", "links-tag"]
      i18n: translate
    - label: Portada
      name: "cover"
      widget: "object"
      i18n: true
      fields:
        - {
            label: "Portada",
            hint: Imagen de portada,
            name: "path",
            widget: "image",
            choose_url: false,
            default: "/assets/media/no_image-hero.png",
            media_library: { config: { multiple: false } },
            media_folder: "/media/sticker_packs/heroes/",
            i18n: duplicate
          }
        - {
            label: "Portada (reducida)",
            hint: Imagen pequeña usada en listas,
            name: "thumbnail",
            widget: "image",
            choose_url: false,
            default: "/assets/media/no_image-thumbnail.png",
            media_library: { config: { multiple: false } },
            media_folder: "/media/sticker_packs/thumbnails/",
            i18n: duplicate
          }
        - { label: "Texto alternativo a la imagen", name: "alt", widget: "string", i18n: translate }
        - { label: "Créditos de la imagen", name: "credits", widget: "string", i18n: translate }
        - { label: "Pie de imagen", name: "caption", widget: "string", i18n: translate }
{% endraw %}
