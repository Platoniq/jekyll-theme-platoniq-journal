{% raw %}
- name: "volumes"
  label: "Volúmenes"
  label_singular: "Volumen"
  folder: "_volumes/"
  i18n:
    structure: multiple_folders
    locales: *locales
  create: true
  delete: true
  editor:
    preview: true
  # identifier_field: uid
  summary: "#{{volume-number}}: {{title}} ({{date}})"
  fields:
    - label: Publicado
      name: published
      widget: boolean
      default: false
      i18n: duplicate
      
    - label: "Fecha de publicación"
      name: date
      widget: date
      i18n: duplicate

    - label: Layout
      name: layout
      widget: hidden
      default: journal
      i18n: duplicate
      
    - label: "Número de volumen del Journal"
      name: volume-number
      widget: number
      default: 0
      value_type: int
      min: 1
      max: 101
      step: 1
      i18n: duplicate
      
    - label: Título
      name: title
      widget: string
      i18n: translate

    - label: Slug
      name: uid
      hint: "Identificador único, compartido entre los distintos idiomas, que se usa para componer la URL"
      widget: string
      i18n: duplicate

    - label: "Imagen de portada"
      name: "cover"
      widget: "object"
      i18n: true
      fields:
        - {
            label: "Portada",
            hint: Imagen de portada,
            name: "path",
            widget: "image",
            choose_url: false,
            default: "/assets/media/no_image-hero.png",
            media_library: { config: { multiple: false } },
            media_folder: "/media/volumes/heroes",
            i18n: duplicate
          }
        - {
            label: "Portada (móvil)",
            hint: Portada para móvil en formato vertical,
            name: "mobile",
            widget: "image",
            choose_url: false,
            default: "/assets/media/no_image-hero.png",
            media_library: { config: { multiple: false } },
            media_folder: "/media/volumes/mobile",
            i18n: duplicate
          }
        - {
            label: "Portada (reducida)",
            hint: Imagen pequeña usada en listas,
            name: "thumbnail",
            widget: "image",
            choose_url: false,
            default: "/assets/media/no_image-hero.png",
            media_library: { config: { multiple: false } },
            media_folder: "/media/volumes/thumbnails",
            i18n: duplicate
          }
        - { label: "Texto alternativo a la imagen", name: "alt", widget: "string", i18n: translate }
        - { label: "Créditos de la imagen", name: "credits", widget: "string", i18n: translate }

    - label: Descripción o resumen de este volumen del Journal
      hint: "Principalmente usado para SEO"
      name: description
      widget: string
      i18n: translate
  
    - label: "Imagen de previsualización"
      name: image
      hint: Se verá cuando el artículo sea compartido en redes sociales, como previsualización del enlace
      widget: object
      i18n: true
      required: false
      fields:
        - label: Imagen
          hint: "Las imágenes para las 'summary cards' deben ser de 144px × 144px y de un tamaño menor o igual a 1MB."
          name: path
          widget: image
          default: "/assets/media/no_image-social_media.png"
          media_library: { config: { multiple: false } }
          media_folder: "/media/volumes/social"
          i18n: duplicate

        - label: "Texto alternativo a la imagen"
          name: alt
          widget: string
          i18n: translate
{% endraw %}
