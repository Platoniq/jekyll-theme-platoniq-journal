<header class="pj-hero">
  <div class="pj-hero__text">
    <h4>
      <a href="{{ category_archive.url | relative_url }}">
        {{ category_name }}
      </a>
    </h4>

    <h1>
      {% if page.category == "interviews" %}
        <span class="interviewee">{{ page.interviewee }}</span>
      {% endif %}

      {{ page.title }}
    </h1>

    <div class="pj-hero__data">
      <span class="pj-hero__data__date">
        {{ article_date }}
      </span>

      <span class="pj-hero__data__author">
        {{ author.name | prepend: t_authored_by }}
      </span>
    </div>
  </div>

  <div class="pj-hero__img">
    <img src="{{ page.cover.path | relative_url }}" alt="{{ article.cover.alt }}">
    <!-- <div class="caption">{{ article.cover.caption }}</div>
    <div class="credits">{{ article.cover.credits }}</div> -->
  </div>
</header>

