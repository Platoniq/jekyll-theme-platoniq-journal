{% assign article_author = site.authors | where: "uid", page.author | where: "locale", page.locale | first %}

<div class="card mb-3">
  <div class="card-body">
    <p>
      Author: <a href="{{ article_author.url | relative_url }}">{{ article_author.name }}</a> - {{ article_author.position }}
      <img src="{{ article_author.image_url }}" alt="{{ article_author.name }}" height="50">
    </p>
  </div>
</div>
